{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Metamath",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "punctuation.definition.tag.metamath",
				"match": "\\$(a|c|d|e|f|p|v|\\.|{|}|=)"
			}]
		},
		"comments": {
			"name": "comment.line.metamath",
			"begin": "\\$\\(",
			"end": "\\$\\)"
		}
	},
	"scopeName": "source.metamath"
}